doctype html
html
    head
        title= title
        link(rel='stylesheet' href='/css/style.css')
    body(class="flex flex-col dark:bg-black dark:text-white items-center")
        div(class="flex flex-col justify-start w-[90%] max-w-2xl gap-2")
            div(class="mb-2 flex gap-2 bg-gray-100 items-baseline justify-between dark:bg-gray-800 p-2 pl-4 rounded-b-md")
                if session
                    if session.user.image
                        span(style=`background-image: url('${session.user.image}')`)
                    span 
                        | Signed in as 
                        strong= session.user.email || session.user.name
                    a(class="py-2.5 font-medium px-5 bg-blue-600 text-white rounded-md" href="/api/auth/signout") Sign out
                else
                    span(class="") You are not signed in
                    a(id="sign-in" class="py-2.5 font-medium px-5 bg-blue-600 text-white rounded-md" href="/api/auth/signin") Sign in

            nav(class="mb-4")
                ul(class="flex flex-row gap-4 underline")
                    li
                        a(href="/") Home
                    li
                        a(href="/protected") Protected
                    li
                        a(href="/api/protected") Protected (API)

            block content
