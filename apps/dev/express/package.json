{
    "name": "express-auth-app",
    "version": "1.0.0",
    "type": "module",
    "description": "Express + Auth.js Developer app",
    "main": "server.js",
    "private": true,
    "scripts": {
        "start": "node dist/server.js",
        "build": "pnpm build:ts && pnpm build:css",
        "build:ts": "tsc",
        "build:watch": "pnpm build:ts:watch & pnpm build:css:watch",
        "build:css:watch": "npx tailwindcss -i public/css/tailwind.css -o public/css/style.css -w",
        "build:ts:watch": "tsc -w",
        "build:css": "postcss public/css/tailwind.css -o public/css/style.css",
        "test": "jest --coverage=false --verbose",
        "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"pnpm run build:watch\" \"pnpm run dev:node\"",
        "dev:node": "nodemon --experimental-fetch --experimental-global-webcrypto dist/server.js",
        "dev:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"pnpm run build:watch\" \"pnpm run dev:node:debug\"",
        "dev:node:debug": "nodemon --inspect dist/server.js",
        "lint": "eslint src/*.ts",
        "lint:fix": "yarn lint --fix",
        "prettier": "prettier src/*.ts",
        "debug": "pnpm run build && pnpm run dev:debug"
    },
    "author": "Rexford Essilfie <rexfordessilfie09@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "@auth/core": "workspace:*",
        "@auth/express": "workspace:*",
        "autoprefixer": "^10.4.15",
        "dotenv": "^16.3.1",
        "express": "^4.16.2",
        "http-errors": "^1.7.1",
        "morgan": "^1.9.1",
        "postcss": "^8.4.28",
        "postcss-cli": "^9.1.0",
        "pug": "^3.0.1",
        "tailwindcss": "^3.3.3"
    },
    "devDependencies": {
        "@prettier/plugin-pug": "^3.0.0",
        "@types/express": "4.17.17",
        "@types/http-errors": "1.8.2",
        "@types/jest": "26.0.24",
        "@types/morgan": "1.9.4",
        "@types/node": "14.18.53",
        "@types/supertest": "2.0.12",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "concurrently": "6.5.1",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-plugin-import": "2.27.5",
        "jest": "26.6.3",
        "nodemon": "2.0.22",
        "prettier": "2.8.8",
        "prettier-plugin-tailwindcss": "^0.5.3",
        "supertest": "6.3.3",
        "ts-jest": "26.5.6",
        "typescript": "5.1.6"
    }
}
